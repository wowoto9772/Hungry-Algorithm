<pre class = "line-numbers"><code class = "language-cpp">#include &lt;cstdio&gt;
#include &lt;limits.h&gt;
#include &lt;algorithm&gt;

using namespace std;

int d[253][253];

int main(){

    int n, m;
    scanf("%d %d", &n, &m);

    for(int i=1; i&lt;=n; i++){
        for(int j=1; j&lt;=n; j++)d[i][j] = INT_MAX;
        d[i][i] = 0;
    }

    for(int i=1; i&lt;=m; i++){
        int a, b, t;
        scanf("%d %d %d", &a, &b, &t);

        if(t)d[a][b] = d[b][a] = 0;
        else
            d[a][b] = 0, d[b][a] = 1;
    }

    for(int k=1; k&lt;=n; k++){
        for(int i=1; i&lt;=n; i++){
            if(d[i][k] == INT_MAX)continue;
            for(int j=1; j&lt;=n; j++){
                if(d[k][j] == INT_MAX)continue;
                d[i][j] = min(d[i][j], d[i][k] + d[k][j]);
            }
        }
    }

    int q;
    scanf("%d", &q);

    while(q--){
        int a, b;
        scanf("%d %d", &a, &b);

        printf("%d\n", d[a][b]);
    }

}
